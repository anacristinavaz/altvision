{
  "manifest_version": 3,
  "name": "AltVision",
  "description": "Gera descrições automáticas de imagens sem alt text usando IA, promovendo acessibilidade para pessoas com deficiência visual.",
  "version": "1.0.4",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/iconAltVision.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
